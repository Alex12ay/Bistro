{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <section class="container">
        <div class="mb-5">
            <h1>Modifier mon profil</h1>
            {{ form_start(form) }}
                {{ form_row(form.pseudo) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}
                {{ form_row(form.email) }}
            
                <button type="submit" class="buttonA">Enregistrer les modifications</button>
            {{ form_end(form) }}
        </div>
    
        {# Formulaire de suppression du profil #}
        <h2 id="supprCompte" class="mt-3">Supprimer mon compte</h2>
        <p>Attention : cette action est irréversible et supprimera toutes vos recettes et favoris.</p>
        <form method="post" action="{{ path('app_profil_suppr', {'id': app.user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre profil ? Toutes vos recettes ainsi que vos recettes favorites seront également supprimées. Cette action est irréversible.');">
            <input type="hidden" name="_token" value="{{ csrf_token('profil-suppr') }}">
            <button type="submit" class="buttonB">Oui je Supprime mon compte</button>
        </form>
    </section>
{% endblock %}