{% extends 'base.html.twig' %}

{% block title %}La création de la recette{% endblock %}

{% block body %}

    <div>
        <div class="modal fade" id="multiTabModal" tabindex="-1" role="dialog" aria-labelledby="multiTabModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="multiTabModalLabel">Création de la recette</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <div class="modal-body">
                    <!-- Onglets -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="ingredients-tab" data-toggle="tab" href="#hingredients" role="tab" aria-controls="ingredients" aria-selected="true">Ingrédients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="ustensiles-tab" data-toggle="tab" href="#ustensiles" role="tab" aria-controls="ustensiles" aria-selected="false">Ustensiles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="etapes-tab" data-toggle="tab" href="#etapes" role="tab" aria-controls="etapes" aria-selected="false">Etapes de la recette</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tags-tab" data-toggle="tab" href="#tags" role="tab" aria-controls="tags" aria-selected="false">Mots clés</a>
                        </li>
                    </ul>
                    
                    <!-- Contenu des onglets -->
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="ingredients" role="tabpanel" aria-labelledby="ingredients-tab">
                            <h3>Saisissez les ingrédients de la recette</h3>
                            <p>Notez les quantités pour 4 personnes, ainsi que l'unité de mesure.</p>
                            <p> {{ form_start(form1) }}
                                    {{ form_widget(form1) }}
                                    <button type="submit" class="btn btn-primary">Passer à l'étape suivante</button>
                                {{ form_end(form1) }}</p>
                        </div>
                        <div class="tab-pane fade" id="ustensiles" role="tabpanel" aria-labelledby="ustensiles-tab">
                            <h3>Notez les ustensiles nécessaires pour réaliser la recette</h3>
                            <p> {{ form_start(form2) }}
                                    {{ form_widget(form2) }}
                                    <button type="submit" class="btn btn-primary">Passer à l'étape suivante</button>
                                {{ form_end(form2) }}</p>
                        </div>
                        <div class="tab-pane fade" id="etapes" role="tabpanel" aria-labelledby="etapes-tab">
                            <h3>Notez les différentes étapes pour réaliser la recette</h3>
                            <p> {{ form_start(form3) }}
                                    {{ form_widget(form3) }}
                                    <button type="submit" class="btn btn-primary">Passer à l'étape suivante</button>
                                {{ form_end(form3) }}</p>
                        </div>
                        <div class="tab-pane fade" id="tags" role="tabpanel" aria-labelledby="tags-tab">
                            <h3>Quels sont les mots clés de cette recette</h3>
                            <p>Notez les mots qui permettront aux utilisateurs de retrouver votre recette.</p>
                            <p> {{ form_start(form4) }}
                                    {{ form_widget(form4) }}
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                {{ form_end(form4) }}</p>
                        </div>
                    </div>
                </div>
                    <div class="modal-footer">
                        <button type="button" class="btn buttonB" data-dismiss="modal">Fermer</button>
                        <button type="button" class="btn buttonA">Enregistrer</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
   
{% endblock %}